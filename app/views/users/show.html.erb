<% provide(:title, "#{@user.name} #{@user.second_name}") %>
<%#= radio_button :user_id, @user.collaborators %>
  <div class="text-center">
    <% if @user.image.present? %>
      <%= link_to (image_tag @user.image.url(:small) ), user_path(@user) %>
    <% else %>
      <%= link_to (image_tag 'empty.png', width: 152 ), user_path(@user) %>
    <% end %>
    <h1><b><%= @user.name %> <%= @user.second_name %></b></h1>
    <%= render "follow_form" if logged_in? %>
  </div>

  <div class="col-md-2">
  </div>

  <div class="users_main col-md-9 row">
      <% if @user.relatives.present? %>
        <%= render @relatives %>
      <% else %>
        <h2 class="col-10 text-center user_relations"><b><%= t('.text') %></b></h2>
      <% end %>
  </div>
