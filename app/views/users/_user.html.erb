<div class="product-card text-center products" style="width: 20rem">
  <div class="card-body">
    <h2><%= user.first_name %></h2>
    <%= link_to(image_tag(user.image.small.url, alt: 'Image'), user_path(user)) if user.image.present? %>
    <h2><%= user.last_name %></h2>
    <h2><%= user.description.truncate(15) %></h2>
  </div>
  <%= link_to 'show', user_path(user), class: 'btn btn-success btn-sm' %>
  <%= link_to 'edit', edit_user_path(user), class: 'btn btn-warning btn-sm' %>
  <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
</div>
